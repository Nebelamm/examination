<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neu.edu.mapper.SubjectMapper">
    <select id="findAll" resultType="subjectVO">
        select * from t_subject
    </select>

    <insert id="add" parameterType="subject">
        insert into t_subject(name) values(#{name})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete  from t_subject where id=#{id}
    </delete>

    <update id="updateById" parameterType="subject">
        update t_subject set name = #{name} where id = #{id}
    </update>

</mapper>